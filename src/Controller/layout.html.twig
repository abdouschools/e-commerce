{% extends "base.html.twig" %}

{% block title %}lunettes Griffa
{% endblock %}
{% block body %}
	<!-- Google Tag Manager (noscript) -->
	<noscript>
		<iframe src="https://www.googletagmanager.com/ns.html?id=GTM-W7JJJLX" height="0" width="0" style="display:none;visibility:hidden"></iframe>
	</noscript>
	<!-- End Google Tag Manager (noscript) -->
	<header>
		{%  block nav %}
			<nav class="navbar navbar-expand-lg   ">
				<div class="container-fluid navigation">
					<a class="navbar-brand" href="{{path('home')}}">
						<figure><img src="{{asset('image/logo-final.png')}}" alt="logo Griffa " class='logo'></figure>
					</a>
					<a class="navbar-toggler navbar navbar-light " style="background-color: rgb(70, 201, 66);" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" href='#'>
						<span class="navbar-toggler-icon"></span>
					</a>
					<div class="collapse navbar-collapse" id="navbarResponsive">
						<ul class="navbar-nav   borderYtoX ">


							<li class="nav-item  ">
								<a class="nav-link " href="{{path ('filter')}}">
									<i class="fas fa-filter"></i>
									{% trans %}Filtrer{% endtrans %}</a>
							</li>
							<li class="nav-item   ">
								<a class="nav-link " href="{{path ('marques')}}">
									<i class="fas fa-award"></i>
									{% trans %}Marques{% endtrans %}</a>
							</li>
							<li class="nav-item   ">
								<a class="nav-link " href="{{path ('magasins')}}">
									<i class="fas fa-store"></i>
									{% trans %}Magasins{% endtrans %}</a>
							</li>
							<li class="nav-item   ">
								<a class="nav-link " href="{{path ('actualites')}}">
									<i class="fas fa-glasses"></i>
									{% trans %}Actualite
									{% endtrans %}</a>
							</li>
							{% if is_granted('ROLE_ADMIN') %}

								<li class="nav-item   ">
									<a class="nav-link" href="{{path('admin')}}">
										<i class="fas fa-tools"></i>
										{% trans %}Espace admin{% endtrans %}</a>
								</li>
							{% endif %}
							{% if is_granted('IS_AUTHENTICATED_FULLY') %}
								<li class="nav-item   ">
									<a class="nav-link" href="{{path('app_logout')}}">
										<i class="fas fa-sign-out-alt"></i>
										{% trans %}Logout{% endtrans %}</a>
								</li>
								<li class="nav-item   ">
									<a class="nav-link" href="{{path('app_profile')}}">
										<i class="fas fa-id-card"></i>
										{% trans %}Profile{% endtrans %}</a>
								</li>
							{% else %}
								<li class="nav-item   ">
									<a class="nav-link" href="{{path('app_login')}}">
										<i class="fas fa-sign-in-alt"></i>
										{% trans %}Connecte{% endtrans %}</a>
								</li>
								<li class="nav-item   ">
									<a class="nav-link" href="{{path('app_register')}}">
										<i class="fas fa-user-circle"></i>
										{% trans %}Nouveau Compte{% endtrans %}</a>
								</li>

							{% endif %}
							{{ render(controller(
        'App\\Controller\\PanierController::artPanier'
    )) }}
							{% for locale in locales  %}
								{% if locale != app.request.locale %}
									<li class="nav-item   ">

										<a class="nav-link" href="{{path ('change_locale' , {'locale' : locale})}}">
											<figure><img src="{{asset('image/'~ locale ~'.png')}}" alt="langue {{locale}}">{% trans %}langue{% endtrans %}</figure>
										</a>
									</li>

								{% endif %}
							{% endfor %}
						</ul>

					</div>
				</div>
			</nav>
		{% endblock %}
	</header>
	{%  block carousel %}
		<div>
			<div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-bs-ride="carousel">
				<ol class="carousel-indicators">
					<li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
					<li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" class="active"></li>
					<li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" class="active"></li>
				</ol>
				<div class="carousel-inner " data-interval="8000">
					<div class="carousel-item active">
						<div class="overlay-image" style=" background-image: url(../image/444.jpg)"></div>
						<article class="carousel-caption  d-block">
							<h1>{% trans %}Service Réactif{% endtrans %}
							</h1>
							<p>{% trans %}A Votre service À tout Moment.{% endtrans %}</p>
							<button class=" neon ">
								<a href="{{path('contact')}}">{% trans %}Contactez-Nous{% endtrans %}</a>
							</button>
						</article>
					</div>
					<div class="carousel-item " data-interval="8000">
						<div class="overlay-image" style=" background-image: url(../image/666.jpg)"></div>
						<article class="carousel-caption d-block">
							<h1>{% trans %}Tous Nos Magazins Sont Ouverts{% endtrans %}
								9h00 A 18H00.</h1>
							<button class=" neon">
								<a href="{{path ('magasins')}}">{% trans %}Consulter{% endtrans %}</a>
							</button>
						</article>
					</div>
					<div class="carousel-item " data-interval="8000">
						<div class="overlay-image" style=" background-image: url(../image/55.jpg)"></div>
						<article class="carousel-caption  d-block">
							<h1>{% trans %}La Solution A Votre Portée{% endtrans %}</h1>
							<p>{% trans %}
								Un Grand Choix De Montures{% endtrans %}
							</p>
							<button class=" neon">
								<a href="{{path ('filter')}}">{% trans %}Consulter{% endtrans %}</a>
							</button>
						</article>
					</div>
				</div>
				<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">{% trans %}Previous{% endtrans %}</span>
				</a>
				<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">{% trans %}Next{% endtrans %}</span>
				</a>
			</div>
		</div>
	{% endblock %}
	<main>
		{% block content %}{% endblock %}

		<hr class="my-4">
		<aside class="container-fluid padding">
			<div class="row text-center padding ">
				<div class="col-12">
					<h1 class='index-h1'>{% trans %}SUIVEZ NOUS{% endtrans %}</h1>
				</div>
				<div class="col-12 social padding">
					<a href="https://www.facebook.com/Lunette-1894407450831454" target="_blank">
						<i class='fab fa-facebook'></i>
					</a>
					<a href="https://twitter.com/glasses_direct" target="_blank">
						<i class='fab fa-twitter'></i>
					</a>

					<a href="https://www.instagram.com/stylefashionnowhot/" target="_blank">
						<i class='fab fa-instagram'></i>
					</a>
					<a href="https://www.youtube.com/channel/UConS0kmsBSZrA_D3E4mNaeA" target="_blank">
						<i class='fab fa-youtube'></i>
					</a>
				</div>
			</div>
		</aside>
	</main>
	<footer>
