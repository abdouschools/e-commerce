{% extends 'layout.html.twig' %}

{% block title %}
	{% trans %}Renétialisez votre mot de passe{% trans %}
{% endblock %}

{% block  carousel %}{% endblock %}
{% block content %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
	{% for message in app.flashes('message')%}
		<div class='alert alert-success'>{{message}}</div>
	{% endfor %}
	{% for message in app.flashes('warning')%}
		<div class='alert alert-warning'>{{message}}</div>
	{% endfor %}
	{% for message in app.flashes(' danger')%}
		<div class=' alert alert-danger'>{{message}}</div>
	{% endfor %}

	<div class="container " id="login">
		<div class="row px-3">
			<div class="col-lg-10 col-xl-9 card flex-row mx-auto px-0">
				<div class="img-left d-none d-md-flex"></div>

				<div class="card-body" id="formulaire">
					<h4 class="title text-center mt-4">{% trans %}Renétialisez votre mot de passe{% trans %}
					</h4>
					<form method="post" class="form-box px-3">
						{{ form_start (form) }}
						<div class="form-input">

							{{ form_row (form.email)}}
						</div>
						<div class="mb-3 login">
							<button type="submit" id='register'>
								{% trans %}Envoyer{% endtrans %}
							</button>
						</div>


						<hr class="my-4">

						<div class="text-center mb-2">
							Don't have an account?
							<a href="{{path('app_register')}}" class="register-link">
								Register here
							</a>
						</div>
						{{ form_end(form) }}
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
